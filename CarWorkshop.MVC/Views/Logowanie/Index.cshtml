@model Login

@{
    ViewData["Title"] = "Logowanie";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card mt-5">
            <div class="card-body">
                <h3 class="card-title text-center mb-3">Zaloguj się teraz</h3>
                <form method="post" asp-action="">
                   <div class="mb-3">
                       <label asp-for="Name" class="form-label"></label><br />
                       <input type="text" class="from-control" asp-for="Name" required />
                   </div>
                   <div>
                       <label asp-for="Password" class="form-label"></label><br />
                       <input type="text" class="from-control" asp-for="Name" required />
                   </div>
                   <button type="submit" class="btn btn-primary float-end">Zaloguj się</button>
                </form>
            </div>
        </div>
    </div>
</div>